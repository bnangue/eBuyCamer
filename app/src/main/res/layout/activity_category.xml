<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_category"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bricenangue.nextgeneration.ebuycamer.CategoryActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_category_activity"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_bottom_actegory_activity"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:foregroundGravity="left"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="left|bottom"
            android:layout_gravity="left|bottom"
            android:minHeight="?attr/actionBarSize"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_add_a_photo_white_18dp"
                android:id="@+id/button_create_new_post_category_activity"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:text="@string/button_toolbar_sell"
                android:textSize="10sp"
                android:layout_gravity="start|bottom"
                android:textColor="@color/white"
                android:textAllCaps="false"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_grade_white_18dp"
                android:id="@+id/button_view_favorite_category_activity"
                android:text="@string/button_toolbar_my_favorite"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:layout_gravity="start|bottom"
                android:elevation="0dp" />
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_folder_white_18dp"
                android:id="@+id/button_view_my_post_category_activity"
                android:text="@string/button_toolbar_my_Ads"
                android:textAllCaps="false"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:layout_gravity="start|bottom"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_settings_white_18dp"
                android:id="@+id/button_go_to_setting_category_activity"
                android:text="@string/button_toolbar_settings"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:layout_gravity="start|bottom"/>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerview_category"
        android:layout_below="@+id/toolbar_category_activity"
        android:layout_above="@+id/toolbar_bottom_actegory_activity"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"/>
</RelativeLayout>
