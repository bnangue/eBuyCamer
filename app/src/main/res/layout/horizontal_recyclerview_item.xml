<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="200dp"
    android:layout_height="200dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_horizotal_recyclerview_cardview"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="2dp"
        >



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/progressbar_horizontal_recyclerview"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:id="@+id/imageView_horizotal_recyclerview_cardview"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:id="@+id/button_delete_horizotal_recyclerview_cardview"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:drawableRight="@mipmap/ic_delete_action"
                android:gravity="end|center"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"


                />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>